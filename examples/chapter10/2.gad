Constant String FILE = "2.gad.dat"
Declare OutputFile out

Open out FILE
Write out 1, True, "Edmund Burke"
Close out

Call readAndPrint()

Declare OutputFile AppendMode app
Open app FILE
Write app 2, False, "Plato"
Close app

Call readAndPrint()

Module readAndPrint()
	Declare InputFile in
	Declare Integer a
	Declare Boolean b
	Declare String c
	Declare Integer i

	Open in FILE
	While NOT eof(in)
		Read in a, b, c
		Display a, ", ", b, ", ", c
	End While
End Module
